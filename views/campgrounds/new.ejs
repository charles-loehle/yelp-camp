<% include ../partials/header %>
<div class="container">
  <h1 class="text-center">Add a New Campground</h1>
  <form action="/campgrounds" method="POST" class="mx-auto" style="width: 400px">
    <!-- NAME -->
    <div class="form-group">
      <!-- name attributes are to grab the data from req.body -->
      <input class="form-control" type="text" name="name" placeholder="name">
    </div>
    <!-- PRICE -->
    <div class="form-group">
      <!-- name attributes are to grab the data from req.body -->
      <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
    </div>
    <!-- IMAGE -->
    <div class="form-group">
      <input class="form-control" type="text" name='image' placeholder="image url">
    </div>
    <!-- DESCRIPTION -->
    <div class="form-group">
      <input class="form-control" type="text" name='description' placeholder="description">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/campgrounds">Go Back</a>
  </form>
  <% include ../partials/footer %>
</div>